{% extends "::base.html.twig" %}

{% block title %}PureThink{% endblock %}

{% block icon %}
    <link rel="icon" type="image/x-icon" href="{{ asset('purethink.ico') }}" />
{% endblock %}

{% block stylesheets %}
    {% stylesheets
        '@PurethinkCoreBundle/Resources/public/css/plugin/bootstrap.css'
        '@PurethinkCoreBundle/Resources/public/css/plugin/alertify.core.css'
        '@PurethinkCoreBundle/Resources/public/css/plugin/alertify.bootstrap.css'
        '@PurethinkCoreBundle/Resources/public/css/*'
        filter='less,cssrewrite,uglifycss'
        output='css/core.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock stylesheets %}

{% block javascripts %}
    {% javascripts
        '@PurethinkCoreBundle/Resources/public/js/plugin/bootstrap.js'
        '@PurethinkCoreBundle/Resources/public/js/lib/*'
        '@PurethinkCoreBundle/Resources/public/js/plugin/alertify.js'
        '@PurethinkCoreBundle/Resources/public/js/*'
        filter="?uglifyjs2"
        output='js/core.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascripts %}

{% block body %}
    {% include "PurethinkCoreBundle::_message.html.twig" %}
{% endblock body %}