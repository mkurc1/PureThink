{% extends "PurethinkCMSBundle:Page:layout.html.twig" %}

{% block body %}
    {{ parent() }}

    {{ component['position-9']|raw }}

    <div id="top">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-xs-12" id="logo">
                    <a href="{{ path('localized_page', {'locale': app.request.locale}) }}">
                        <img src="{{ asset('template/purethink-standard/images/logo.png') }}" alt="logo" />
                    </a>
                </div>

                <div class="col-md-6 col-xs-12">
                    {% include template.scriptPath~':_topmenu.html.twig' %}
                </div>
            </div>
        </div>
    </div>

    <div id="main_menu">
        <div class="container">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                data-target="#main-menu-container" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="main-menu-container">
                        {{ component['position-2']|raw }}

                        {% include template.scriptPath~':_search.html.twig' %}
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </div>
    </div>
{% endblock body %}