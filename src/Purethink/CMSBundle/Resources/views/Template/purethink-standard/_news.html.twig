{% if entities != null %}
    <h3>{{ entities['title'] }}</h3>

    {% for key, new in entities if key != 'title' %}
        <a href="{{ path('article', { 'locale': app.request.locale, 'category': new['adres'].category, 'slug': new['adres'].slug }) }}" class="news">
            <div class="image">
                {% media new['fotografia'], 'reference' %}
            </div>
            <div class="content">
                <h4>{{ new['nazwa'] }}</h4>
                <span class="date">{{ new['created']|format_datetime('dd MMM Y HH:mm') }}</span>

                <p>{{ new['tresc'] }}</p>
            </div>
        </a>
    {% endfor %}
{% endif %}