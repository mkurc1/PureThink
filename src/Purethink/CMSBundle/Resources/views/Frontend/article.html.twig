{% extends "PurethinkCMSBundle:Frontend:layout.html.twig" %}

{% block keywords %}
    {{ article.SEOData.keyword|default(parent()) }}
{% endblock keywords %}

{% block description %}
    {{ article.SEOData.description|default(parent()) }}
{% endblock description %}

{% block title %}
    {{ article.SEOData.title|default(parent()) }}
{% endblock title %}

{% block body %}
    {{ parent() }}

    <div id="article">
        <div class="container">
            <div class="page-header">
                <h3>{{ article.name }}</h3>
                <h5 class="datetime">{{ article.createdAt|format_datetime('dd MMM Y HH:mm') }}</h5>

                {% if (article.tags|length > 0) %}
                    <div class="tags">
                        {% for tag in article.tags %}
                            <span class="label label-{{ tag.color }}">{{ tag }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            {{ article.content|raw }}

            {{ sonata_block_render_event('sonata.comment', {'id': article.id}) }}
        </div>
    </div>

    {{ sonata_block_render({ "type": "purethink.cms.block.component", "settings": {
        "template": "PurethinkCMSBundle:Frontend:_link.html.twig",
        "slug": "linki",
        "locale": locale
    } }) }}

    {% include 'PurethinkCMSBundle:Frontend:_footer.html.twig' with {'local': locale} %}
{% endblock body %}