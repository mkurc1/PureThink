{% extends "@PurethinkCMS/Page/layout.html.twig" %}

{% set meta = article %}

{% block body %}
    {{ parent() }}

    <div id="article">
        <div class="container">
            <div class="article">
                <div class="page-header">
                    <h3>{{ article.name }}</h3>
                    <h5 class="datetime">{{ article.created|format_datetime('dd MMM Y HH:mm') }}</h5>
                </div>

                {{ article.content|raw }}
            </div>
        </div>
    </div>

    {{ sonata_block_render({ "type": 'purethink.cms.block.component', 'settings': {'template': '@PurethinkCMS/Page/_link.html.twig', 'slug': 'linki'} }) }}

    {% include '@PurethinkCMS/Page/_footer.html.twig' %}
{% endblock body %}