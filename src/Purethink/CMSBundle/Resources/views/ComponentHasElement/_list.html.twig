<table class="list">
    <thead>
        <tr>
            <th class="select"></th>
            <th class="lp">Lp.</th>
            <th column="c.text" class="name width_big">Nazwa</th>
            <th column="ce.isEnable" class="width_small">Aktywne</th>
            <th column="ce.createdAt" class="width_small">Data utworzenia</th>
            <th column="ce.updatedAt" class="width_small">Data modyfikacji</th>
        </tr>
    </thead>
    <tbody>
    {% if page > 1 %}
        {% set i = ((page-1)*rowsOnPage) %}
    {% else %}
        {% set i = 0 %}
    {% endif %}
    {% for entity in entities %}
    {% set i = i+1 %}
        <tr list_id="{{ entity.componentHasElement.id }}">
            <td class="select"><input type="checkbox" class="multi_check" /></td>
            <td class="lp">{{ i }}.</td>
            <td class="width_big name"><a class="editMode" href="{{ path('purethink_cms_componenthaselement_edit', { 'id': entity.componentHasElement.id }) }}">{{ entity.text }}</a></td>
            <td class="width_small state">
                {% if entity.componentHasElement.isEnable %}
                    <i class="fa fa-check"></i>
                {% else %}
                    <i class="fa fa-ban"></i>
                {% endif %}
            </td>
            <td class="width_small">{{ entity.componentHasElement.createdAt|date('Y-m-d') }}</td>
            <td class="width_small">{{ entity.componentHasElement.updatedAt|date('Y-m-d') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>