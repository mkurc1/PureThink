{% extends "::base.html.twig" %}

{% block title %}PureThink{% endblock %}

{% block icon %}
    <link rel="icon" type="image/x-icon" href="{{ asset('purethink.ico') }}" />
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" />

    {% stylesheets
        '@PurethinkCMSBundle/Resources/public/css/plugin/alertify.core.css'
        '@PurethinkCMSBundle/Resources/public/css/plugin/alertify.bootstrap.css'
        '@PurethinkCMSBundle/Resources/public/css/core.css'
        filter='less,cssrewrite,uglifycss'
        output='css/core.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock stylesheets %}

{% block javascripts %}
    {% javascripts
        '@PurethinkCMSBundle/Resources/public/js/lib/jquery.js'
        '@PurethinkCMSBundle/Resources/public/js/plugin/alertify.js'
        '@PurethinkCMSBundle/Resources/public/js/core.js'
        filter="uglifyjs2"
        output='js/core.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock javascripts %}

{% block body %}
    {% include "PurethinkCMSBundle::_message.html.twig" %}
{% endblock body %}