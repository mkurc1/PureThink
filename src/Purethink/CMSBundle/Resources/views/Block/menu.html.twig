<ul>
    {% if home %}
        <li>
            <a href="{{ path('localized_page', { 'locale': app.request.locale }) }}">Home</a>
        </li>
    {% endif %}
    {% for entity in menu %}
        <li class="{{ entity.activeChildren | length > 0 ? 'has_submenu' : '' }}">
            <a {{ entity.isNewPage ? 'target="_blank"' : '' }}
                    href="{{ path('article', { 'locale': app.request.locale, 'category': entity.article.category.slug, 'slug': entity.article.slug }) }}">{{ entity }}</a>

            {% if entity.activeChildren | length > 0 %}
                {% include 'PurethinkCMSBundle:Block:menu.html.twig' with { 'menu': entity.activeChildren, 'home': false } %}
            {% endif %}
        </li>
    {% endfor %}
</ul>