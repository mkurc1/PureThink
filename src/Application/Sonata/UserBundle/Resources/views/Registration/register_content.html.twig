<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-user"></span> Register</div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">

                        {{ form_widget(form) }}

                        <div class="form-group last">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-success btn-sm">
                                    {{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
                                <button type="reset" class="btn btn-default btn-sm">
                                    Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-footer">
                    <span class="label">
                        <a href="{{ path('page') }}">Homepage</a>
                    </span>
                    <span class="label">
                        <a href="{{ path('fos_user_security_login') }}">Login</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
