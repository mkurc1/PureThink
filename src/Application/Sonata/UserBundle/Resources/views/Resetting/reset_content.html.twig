{% trans_default_domain 'FOSUserBundle' %}

<div id="login_container">
    <div class="error_list">{{ form_errors(form.new.first) }}</div>

    <div id="login">
        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">
            {{ form_widget(form._token) }}

            {{ form_label(form.new.first) }}
            {{ form_widget(form.new.first) }}

            {{ form_label(form.new.second) }}
            {{ form_widget(form.new.second) }}

            <div id="submit_container">
                <input type="submit" id="_submit" value="{{ 'resetting.reset.submit'|trans }}" />
            </div>
        </form>
    </div>

    <ul class="links">
        <li><a href="{{ path("fos_user_security_login") }}">Wróć na stronę logowania</a></li>
        <li><a href="{{ path("page") }}">Wróć na stronę główną</a></li>
    </ul>
</div>
