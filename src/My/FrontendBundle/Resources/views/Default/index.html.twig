{% extends "::base.html.twig" %}

{% block keywords %}
    {% if meta %}
        {{ meta.keywords }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock keywords %}

{% block description %}
    {% if meta %}
        {{ meta.description }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock description %}

{% block title %}
    {% if meta and meta.name != '' %}
        {{ meta.name }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/cms/frontend/fresh_style/css/main.css') }}">
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/cms/frontend/fresh_style/js/jquery.slides.min.js') }}"></script>
    <script src="{{ asset('bundles/cms/frontend/fresh_style/js/main.js') }}"></script>
{% endblock javascripts %}

{% block body %}
    <div id="top">
        <div class="container">
            <div id="logo">
                <a href="{{ path('localized_frontend', {'locale': locale}) }}">
                    <img src="{{ asset('bundles/cms/frontend/fresh_style/images/logo.png') }}" alt="logo" />
                </a>
            </div>

            {% include 'MyFrontendBundle:Default:_language.html.twig' with { 'languages': languages, 'locale': locale } %}
        </div>
    </div>

    <div id="main_menu">
        <div class="container">
            {% include 'MyFrontendBundle:Default:_menu.html.twig' with { 'menus': menus['Main'], 'locale': locale, 'home': true } %}
        </div>
    </div>

    {% if components['baner'] is defined %}
        {% include 'MyFrontendBundle:Default:_baner.html.twig' with { 'baners': components['baner'], 'locale': locale } %}
    {% endif %}

    {% include 'MyFrontendBundle:Default:_news.html.twig' %}

    {% if components['linki'] is defined %}
        {% include 'MyFrontendBundle:Default:_link.html.twig' with { 'links': components['linki'], 'locale': locale } %}
    {% endif %}

    {% include 'MyFrontendBundle:Default:_footer.html.twig' with { 'menus': menus, 'locale': locale } %}
{% endblock body %}