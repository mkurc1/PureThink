{% extends "::base.html.twig" %}

{% block keywords %}
    {{ article.keywords }}
{% endblock keywords %}

{% block description %}
    {{ article.description }}
{% endblock description %}

{% block title %}
     {{ article.name }}
{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('template/fresh-style/css/main.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('template/fresh-style/css/article.css') }}">
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('template/fresh-style/js/jquery.slides.min.js') }}"></script>
    <script src="{{ asset('template/fresh-style/js/main.js') }}"></script>
{% endblock javascripts %}

{% block body %}
    <div id="top">
        <div class="container">
            <div id="logo">
                <a href="{{ path('localized_frontend', {'locale': locale}) }}">
                    <img src="{{ asset('template/fresh-style/images/logo.png') }}" alt="logo" />
                </a>
            </div>

            {% include 'MyFrontendBundle:Default:_language.html.twig' with { 'languages': languages, 'locale': locale } %}
        </div>
    </div>

    <div id="main_menu">
        <div class="container">
            {% include 'MyFrontendBundle:Default:_menu.html.twig' with { 'menus': menus['Main'], 'locale': locale, 'home': true } %}

            {% include 'MyFrontendBundle:Default:_search.html.twig' with { 'locale': locale } %}
        </div>
    </div>

    <div id="article">
        <div class="container">
            <h2>{{ article.name }}</h2>

            {{ article.content|raw }}
        </div>
    </div>

    {% if components['linki'] is defined %}
        {% include 'MyFrontendBundle:Default:_link.html.twig' with { 'links': components['linki'], 'locale': locale } %}
    {% endif %}

    {% include 'MyFrontendBundle:Default:_footer.html.twig' with { 'menus': menus, 'locale': locale } %}
{% endblock body %}