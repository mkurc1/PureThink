{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/purethink.css') }}">
{% endblock stylesheets %}

{% block javascripts %}
    {% javascripts
        '@jquery'
        '@helper'
        '@MyUserBundle/Resources/public/js/*'
        filter="uglifyjs2"
        output='js/compiled/login.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascripts %}

{% block body %}
    <div id="top_menu">
        <div id="logo">
            <a href="{{ path('frontend') }}"><img src="{{ asset('images/logo_small.png') }}" alt="logo" /></a>
        </div>
    </div>
{% endblock body %}