{% extends "MyUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    PureThink - Registration Confirmed
{% endblock title %}

{% block body %}
    {{ parent() }}
    <div id="login_container">
        <div id="login">
            <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>

            {% if app.session is not empty %}
                {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
                {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>{% endif %}
            {% endif %}
        </div>

        <ul class="links">
            <li><a href="{{ path("fos_user_security_login") }}">Przejdź na stronę logowania</a></li>
            <li><a href="{{ path("frontend") }}">Wróć na stronę główną</a></li>
        </ul>
    </div>
{% endblock body %}
