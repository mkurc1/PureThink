{% extends "::base.html.twig" %}

{% block title %}
	PureThink - Admin
{% endblock title %}

{% block stylesheets %}
	{{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/plugins/chosen.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/plugins/font-awesome.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/plugins/jquery.qtip.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/purethink.css') }}">
{% endblock stylesheets %}

{% block javascripts %}
	{{ parent() }}
    <script src="{{ asset('js/lib/jquery-2.0.3.js') }}"></script>
    <script src="{{ asset('js/lib/underscore.js') }}"></script>
    <script src="{{ asset('js/lib/backbone.js') }}"></script>
	<script src="{{ asset('js/plugins/jquery.accordion.menu.js') }}"></script>
	<script src="{{ asset('js/plugins/jquery.dynamic.menu.js') }}"></script>
    <script src="{{ asset('js/plugins/chosen.jquery.js') }}"></script>
    <script src="{{ asset('js/plugins/jquery.form.js') }}"></script>
    <script src="{{ asset('js/plugins/jquery.qtip.js') }}"></script>
    <script src="{{ asset('js/plugins/jquery.popup.js') }}"></script>
    <script src="{{ asset('js/model/userSetting.model.js') }}"></script>
    <script src="{{ asset('js/model/pagination.model.js') }}"></script>
    <script src="{{ asset('js/view/pagination.view.js') }}"></script>
    <script src="{{ asset('js/model/list.model.js') }}"></script>
    <script src="{{ asset('js/view/list.view.js') }}"></script>
    <script src="{{ asset('js/model/edit.model.js') }}"></script>
    <script src="{{ asset('js/view/edit.view.js') }}"></script>
    <script src="{{ asset('js/view/mainButton.view.js') }}"></script>
    <script src="{{ asset('js/view/module.view.js') }}"></script>
    <script src="{{ asset('js/view/footer.view.js') }}"></script>
    <script src="{{ asset('js/view/mainMenu.view.js') }}"></script>
    <script src="{{ asset('js/view/leftMenu.view.js') }}"></script>
    <script src="{{ asset('js/view/filter.view.js') }}"></script>
    <script src="{{ asset('js/notify.js') }}"></script>
    <script src="{{ asset('js/select.js') }}"></script>
    <script src="{{ asset('js/helper.js') }}"></script>
    <script src="{{ asset('js/links.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock javascripts %}

{% block body %}
    <div id="top_menu">
    	{% include 'MyBackendBundle:Default:_top_menu.html.twig' %}
	</div>

	<div id="main_menu">
		{% include 'MyBackendBundle:Default:_main_menu.html.twig' with { 'modules': modules } %}
	</div>

	<div id="main_button">
		{% include 'MyBackendBundle:Default:_main_button.html.twig' %}
	</div>

	<div id="main_line"></div>

	<div id="left_menu">
		<ul id="left_menu_container"></ul>
		<div id="author">
			<span>&copy; 2013 <a target="_blank" href="#">ArtCreation</a></span>
			<span><a href="#">Pomoc</a></span>
		</div>
	</div>

	<div id="main">
		<div id="main_container"></div>
		<div id="edit_container"></div>
	</div>

	<div id="footer">
		<div id="left_menu_toggle"></div>

		{% include 'MyBackendBundle:Default:_footer.html.twig' %}
	</div>
{% endblock body %}