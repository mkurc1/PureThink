{% extends "MyCMSBundle:Frontend:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('template/fresh-style/css/article.css') }}">
{% endblock stylesheets %}

{% block keywords %}
    {{ meta.SEOData.keyword|default(parent()) }}
{% endblock keywords %}

{% block description %}
    {{ meta.SEOData.description|default(parent()) }}
{% endblock description %}

{% block title %}
    {{ meta.SEOData.title|default(parent()) }}
{% endblock title %}

{% block body %}
    {{ parent() }}

    {{ render(controller('MyCMSBundle:Frontend:component', {
        'slug'    : 'cookie',
        'template': 'MyCMSBundle:Frontend:_cookie.html.twig'
    })) }}

    <div id="top">
        <div class="container">
            <div id="logo">
                <a href="{{ path('localized_frontend', {'locale': locale}) }}">
                    <img src="{{ asset('template/fresh-style/images/logo.png') }}" alt="logo" />
                </a>
            </div>

            {% include 'MyCMSBundle:Frontend:_topmenu.html.twig' with { 'languages': languages, 'locale': locale } %}
        </div>
    </div>

    <div id="main_menu">
        <div class="container">
            {{ render(controller('MyCMSBundle:Frontend:menu', {
                'slug': 'Main',
                'home': true
            })) }}

            {% include 'MyCMSBundle:Frontend:_search.html.twig' with { 'locale': locale } %}
        </div>
    </div>

    <div id="search">
        <div class="container">
            <h2 class="header">Znalezione artyku≈Çy</h2>

            <ul>
            {% for article in articles %}
                <li><a href="{{ path('article', {'locale': locale, 'slug': article.slug}) }}">{{ article.name }}</a></li>
            {% endfor %}
            </ul>
        </div>
    </div>

    {{ render(controller('MyCMSBundle:Frontend:component', {
        'slug'    : 'linki',
        'template': 'MyCMSBundle:Frontend:_link.html.twig'
    })) }}

    {% include 'MyCMSBundle:Frontend:_footer.html.twig' %}
{% endblock body %}