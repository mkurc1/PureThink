<table>
    <thead>
        <tr>
            <th class="select"></th>
            <th class="lp">Lp.</th>
            <th column="a.name" class="name width_big">Nazwa</th>
        </tr>
    </thead>
    <tbody>
    {% if page > 1 %}
        {% set i = ((page-1)*rowsOnPage) %}
    {% else %}
        {% set i = 0 %}
    {% endif %}
    {% for entity in entities %}
    {% set i = i+1 %}
        <tr list_id="{{ entity.id }}">
            <td class="select"><input type="checkbox" class="multi_check" /></td>
            <td class="lp">{{ i }}.</td>
            <td class="width_big name"><a class="sublist" href="{ path('cmscomponenthascolumn_edit', { 'id': entity.id }) }}">{{ entity }}">{{ entity }}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>