{% for entity in entities %}
{% set i = i+1 %}
    <tr list_id="{{ entity.id }}" {{ entity.menu ? 'parent-id='~entity.menu.id : '' }}>
        <td class="select"><input type="checkbox" class="multi_check" /></td>
        <td class="lp">{{ i }}.</td>
        <td class="width_big name {{ (entity.menu) ? 'submenu' : '' }}"><a class="editMode" href="{{ path('cmsmenu_edit', { 'id': entity.id }) }}">{{ entity }}</a></td>
        <td class="width_small state">
            {% if entity.isPublic %}
                <i class="fa fa-check"></i>
            {% else %}
                <i class="fa fa-ban"></i>
            {% endif %}
        </td>
        <td class="width_small sequence">{{ entity.sequence }}</td>
        <td class="width_small">{{ entity.article.name }}</td>
    </tr>

    {% if entity.menus|length > 0 %}
        {% include 'MyCMSBundle:CMSMenu:_sublist.html.twig' with { 'i': i, 'entities': entity.menus } %}
        {% set i = i+entity.menus|length %}
    {% endif %}
{% endfor %}