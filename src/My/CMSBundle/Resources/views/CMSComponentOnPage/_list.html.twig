<table class="list">
    <thead>
        <tr>
            <th class="select"></th>
            <th class="lp">Lp.</th>
            <th column="a.name" class="name width_big">Nazwa</th>
            <th column="c.name" class="width_small">Rozszerzenie</th>
            <th column="a.slug" class="width_small">Adres</th>
            <th column="a.isEnable" class="width_small">Aktywne</th>
            <th column="a.createdAt" class="width_small">Data utworzenia</th>
            <th column="a.updatedAt" class="width_small">Data modyfikacji</th>
        </tr>
    </thead>
    <tbody>
    {% if page > 1 %}
        {% set i = ((page-1)*rowsOnPage) %}
    {% else %}
        {% set i = 0 %}
    {% endif %}
    {% for entity in entities %}
    {% set i = i+1 %}
        <tr list_id="{{ entity.id }}">
            <td class="select"><input type="checkbox" class="multi_check" /></td>
            <td class="lp">{{ i }}.</td>
            <td class="width_big name"><a class="sublist" sublist_id="{{ entity.id }}" href="{{ path('cmscomponentonpagehaselement') }}">{{ entity }}</a></td>
            <td class="width_small">{{ entity.component.name }}</td>
            <td class="width_small">{{ entity.slug }}</td>
            <td class="width_small state">
                {% if entity.isEnable %}
                    <img class="active" src="{{ asset('images/active.png') }}" alt="active" />
                {% else %}
                    <img class="deactive" src="{{ asset('images/deactive.png') }}" alt="deactive" />
                {% endif %}
            </td>
            <td class="width_small">{{ entity.createdAt|date('Y-m-d') }}</td>
            <td class="width_small">{{ entity.updatedAt|date('Y-m-d') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>