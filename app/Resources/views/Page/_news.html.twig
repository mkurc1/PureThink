{% if entities != null %}
    <div class="col-xs-12 col-sm-6 col-md-4">
        <h3>{{ entities['title'] }}</h3>

        {% for key, new in entities if key != 'title' %}
            <div class="media">
                <div class="media-left">
                    <a href="{{ path('article', { 'slug': new['adres'].slug }) }}">
                        {% media new['fotografia'], 'reference' with {'class': 'media-object'} %}
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('article', { 'slug': new['adres'].slug }) }}">
                            {{ new['nazwa'] }}
                        </a>
                        <small class="date">{{ new['created_at']|format_datetime('dd MMM Y HH:mm') }}</small>
                    </h4>
                    <p>{{ new['tresc'] }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}