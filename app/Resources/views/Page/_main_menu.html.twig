<ul class="nav navbar-nav">
    {% for entity in menu %}
        {% if entity.activeChildren | length > 0 %}
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                   aria-expanded="false">
                    {{ entity }} <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    {% for child in entity.activeChildren %}
                        <li>
                            <a {{ child.isNewPage ? 'target="_blank"' : '' }} href="
                    {% if child.typeOf == constant('AppBundle\\Entity\\Menu::TYPE_OF_ARTICLE') %}
                        {{ path('article', { 'locale': app.request.locale, 'slug': child.article.slug }) }}
                    {% elseif child.typeOf == constant('AppBundle\\Entity\\Menu::TYPE_OF_URL') %}
                        {{ child.url }}
                    {% endif %}
                        ">{{ child }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% else %}
            <li>
                <a {{ entity.isNewPage ? 'target="_blank"' : '' }} href="
                    {% if entity.typeOf == constant('AppBundle\\Entity\\Menu::TYPE_OF_ARTICLE') %}
                        {{ path('article', { 'locale': app.request.locale, 'slug': entity.article.slug }) }}
                    {% elseif entity.typeOf == constant('AppBundle\\Entity\\Menu::TYPE_OF_URL') %}
                        {{ entity.url }}
                    {% endif %}
                        ">{{ entity }}</a>
            </li>
        {% endif %}
    {% endfor %}
</ul>