{% if entities is not empty %}
    <div id="banner">
        <div class="container">
            <div id="banner_a" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% set i = 0 %}
                    {% for banner in entities.entities %}
                        {% set i = i + 1 %}
                        <li data-target="#banner_a" data-slide-to="{{ i - 1 }}"
                            class="{{ (i == 1) ? 'active' : '' }}"></li>
                    {% endfor %}
                </ol>

                <div class="carousel-inner">
                    {% set i = 0 %}
                    {% for banner in entities.entities %}
                        {% set i = i + 1 %}
                        <div class="item {{ (i == 1) ? 'active' : '' }}">
                            <a href="{{ path('article', { 'slug': banner.adres.slug }) }}">
                                {% if is_media_exist(banner.fotografia, 'banner') %}
                                    <img src="{% path banner.fotografia, 'banner' %}" alt="" />
                                {% else %}
                                    <img src="http://dummyimage.com/1000x296/bcbcbc/000000" alt="" />
                                {% endif %}
                            </a>
                        </div>
                    {% endfor %}
                </div>

                <a class="left carousel-control" href="#banner_a" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#banner_a" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
    </div>
{% endif %}