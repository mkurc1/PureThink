{% trans_default_domain 'FOSUserBundle' %}

<div id="top_menu">
    <div id="logo">
        <a href="{{ path('frontend') }}"><img src="{{ asset('images/logo_small.png') }}" alt="logo" /></a>
    </div>
</div>

<div id="login_container">
    <div id="login">
        {% if invalid_username is defined %}
            <div class="error_list">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
        {% endif %}

        <form action="{{ path("fos_user_resetting_send_email") }}" method="POST">
            <input type="text" id="username" name="username" placeholder="{{ 'resetting.request.username'|trans }}" />

            <div id="submit_container">
                <input type="submit" id="_submit" name="_submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </form>

        {% for key, message in app.session.flashbag.all() %}
            <div class="{{ key }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    </div>

    <a id="resetting" href="{{ path("fos_user_security_login") }}">Wróć na stronę logowania</a>
</div>