<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-user"></span> Resetting</div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" action="{{ path('fos_user_resetting_send_email') }}" method="POST">

                        {% if invalid_username is defined %}
                            <div class="alert alert-danger alert-error">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</div>
                        {% endif %}

                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="username" name="username" required="required" />
                            </div>
                        </div>

                        <div class="form-group last">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-success btn-sm">
                                    {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
                                <button type="reset" class="btn btn-default btn-sm">
                                    Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-footer">
                    <span class="label">
                        <a href="{{ path('page') }}">Homepage</a>
                    </span>
                    <span class="label">
                        <a href="{{ path('fos_user_security_login') }}">Login</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
